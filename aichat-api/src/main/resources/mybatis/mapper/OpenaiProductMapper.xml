<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.luowei.aichat.dao.mapper.OpenaiProductMapper">

    <resultMap id="BaseResultMap" type="io.luowei.aichat.dao.po.OpenaiProduct">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="productId" column="product_id" jdbcType="INTEGER"/>
            <result property="productName" column="product_name" jdbcType="VARCHAR"/>
            <result property="productDesc" column="product_desc" jdbcType="VARCHAR"/>
            <result property="productModelTypes" column="product_model_types" jdbcType="VARCHAR"/>
            <result property="quota" column="quota" jdbcType="INTEGER"/>
            <result property="price" column="price" jdbcType="DECIMAL"/>
            <result property="sort" column="sort" jdbcType="INTEGER"/>
            <result property="isEnabled" column="is_enabled" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,product_id,product_name,
        product_desc,product_model_types,quota,
        price,sort,is_enabled,
        create_time,update_time
    </sql>

    <resultMap id="openAIProductMap" type="io.luowei.aichat.dao.po.OpenaiProduct">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_desc" property="productDesc"/>
        <result column="quota" property="quota"/>
        <result column="price" property="price"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryProductByProductId" parameterType="java.lang.Integer" resultMap="openAIProductMap">
        SELECT product_id, product_name, product_desc, quota, price, is_enabled
        FROM openai_product
        WHERE product_id = #{productId}
    </select>

    <select id="queryProductList" resultMap="openAIProductMap">
        SELECT product_id, product_name, product_desc, quota, price
        FROM openai_product
        WHERE is_enabled = 1
        ORDER BY sort
    </select>
</mapper>
